#include <16F887.h>
#device ADC=10
#use delay(crystal=16000000)

int16 ang_bilgi = 0; 

int8 seg_tablo[16] = { 
0x3F,0x06,0x5B,0x4F,0x66,0x6D,0x7D,0x07, 
0x7F,0x6F,0x77,0x7C,0x39,0x5E,0x79,0x71}; 

int8 led_tablo[9] = { //8bitlik "seg_tablo" isminde 
0x00, 0x01, 0x02,0x04,0x08,0x10, 0x20,0x40, 0x80};
 


void main()
{

 setup_adc(ADC_CLOCK_INTERNAL); //ADC için dahili saat sinyali kullan. 
 setup_adc_ports(AN1); 
 
 
setup_timer_1(T1_INTERNAL|T1_DIV_BY_8);  
 set_tris_d(0x00); //PORTD'nin tüm pinleri çýkýþ 
 output_d(0x00); //PORTD'ye 0x00 bilgisi gönder. 
 set_timer1(15536); //TIMER1 sayma deðerini "64536"ya kur. 
  output_float(PIN_B0);
 enable_interrupts(INT_EXT);
 ext_int_edge(L_TO_H);//TIMER1 kesmesi aktif.
 enable_interrupts(GLOBAL); 
 output_a(0x04);
 
 
   while(TRUE)
   {
       set_adc_channel(0); //ADC için AN0 analog kanalýný seç. 
      delay_us(10); //10us bekle. 
       ang_bilgi = read_adc(); 
 
   } 
   
   } 
   

